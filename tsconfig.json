{
  "compilerOptions": {
    "diagnostics": true,
    "esModuleInterop": true,
    "extendedDiagnostics": true,
    "skipLibCheck": false,
    "jsx": "preserve",
    "lib": ["es2020", "ESNext"],
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "outDir": "./build",
    "module": "ESNext",
    "target": "ESNext"
  },
  "include": ["src/index.ts", "src/**/*.ts"],
  "exclude": ["src/test/**/*.*"]
}
